  <% end %>
  </head>

  <body>
    <% unless current_page?(root_path) %>
      <%= render 'layouts/header' %>
    <% else %>
      <div id="main_bg">
    <% end %>
      	

        <% flash.each do |type, message| %>
          <div class="alert <%= bootstrap_class_for(type) %> fade in">
            <%= message %>
          </div>
        <% end %>


        <%= render 'admin/header' %>
        <%= yield %>
        <% unless current_page?(root_path) %>
          <%= render 'layouts/footer' %>
        <% end %>
    <% if controller_name == "sessions" %>
      </div>
    <% end %>
  </body>
</html>
