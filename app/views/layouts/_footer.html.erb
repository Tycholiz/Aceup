<footer style="clear:both;">
  <small>
    <% if current_user %>
      Signed in as <%= current_user.email %> (<%= link_to "Log out", session_path("current"), method: :delete %>)
      
      <% if current_user.role == "Employer" && Employer.where(user_id: current_user.id).first%>
      	<% employer = Employer.where(user_id: current_user.id).first %>
      	<%= link_to("Profile", employer_path(employer)) %>
      <% elsif current_user.role == "Seeker" && Seeker.where(user_id: current_user.id).first%>
        <% seeker = Seeker.where(user_id: current_user.id).first %>
        <%= link_to("Profile", seeker_path(seeker)) %>
      <% end %>

      <p>User type: <%= current_user.role %><p>
    <% else %>
      <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
    <% end %>
	<%= link_to "Home", root_path %>  </small>
</footer>