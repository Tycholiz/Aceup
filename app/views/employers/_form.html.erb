
<div class="container">
    <div class="intro"></div>
</div>
      <div class="register-photo">
        <div class="form-container">
            <div class="image-holder"></div>
            <%= form_for @employer  ,   :html => { :class => "article-form" } do |f| %>
                <h2 class="text-center"><strong>Edit Profile</strong></h2>
                <div class="form-group">
                Company Name
                  <%= f.text_field :compName , class: 'form-control' %>
                  <p class='error'><%= show_errors(@employer, :compName) %></p>
                </div>
                <div class="form-group">
                Company Size
                  <%= f.select :compSize, [["1-5", 1], ["5-10", 2], ["10-30", 3], ["30-60", 4], ["60-100", 5], ["100-150", 6], ["150-200", 7], ["200-300", 8], ["300-500", 9], ["500-750", 10], ["750-1000", 11], ["1000+", 12]
], {}, { class: "form form-group form-control" }%>
                  <p class='error'><%= show_errors(@employer, :compSize) %></p>
                </div>
                <div class="form-group">
                    Metropolitan Area
                    <%= f.select :metro, ['Vancouver', 'Toronto'], {}, { class: "form form-group form-control" }%>
                </div>
                <div class="form-group">
                City
                <%= f.text_field :city, class: 'form-control' %>
                <p class='error'><%= show_errors(@employer, :city) %></p>
                </div>
                <div class="form-group">
                Upload Company Logo
                <%= f.file_field :logo , class: 'form-control' %>
                </div>
                <div class="form-group">
                Company Description </br>
                (This will be displayed on job postings)
                <%= f.text_area :compDesc , style: "height:150px; resize: none;", class: 'form-control', placeholder: "(optional)" %> 
                <p class='error'><%= show_errors(@employer, :compDesc) %></p>
                </div>
                <div >
                <%= f.submit 'Save Changes', class: 'btn btn-primary btn-block', style: "font-size: 30px; font-weight: bolder;" %>
                </div>  
            <% end %>       
        </div>
    </div>
    <div class="features-clean"></div>
    <div></div>
    <div class="simple-slider">
        <div class="swiper-container">
            <div class="swiper-wrapper"></div>
            <div class="swiper-pagination"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>
    </div>
   