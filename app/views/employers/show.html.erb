 <%= render 'header' %>
 <div class="container-fluid">
  <div>
    <table class="table table-hover">
      <tr>
        <th>Title</th>
        <th>Status</th>
        <th>Manage</th>
        <th>Views</th>
        <th>Applications</th>
        <th>Post Date</th>
        <th>Expiry</th>
        <th>ID #</th>
      </tr>

       <% @jobs.each do |job|  %>
      <tr>
        <td><%= link_to job.title, job_path(job) %></td>
        <td><%= job.status %></td>
        <td>(<%= link_to "edit", edit_job_path(job) %>, <%= link_to "delete", job_path(job), method: :delete, data: {confirm: "You sure?"} %>)</td>
        <td><%= job.impressionist_count %></td>
        <td><%= job.applications.size %></td>
        <td><%= job.created_at.to_formatted_s(:short)  %></td>
        <td><%= job.expiry.strftime("%b %d, %Y") if job.expiry%></td>
        <td><%= rand(1000...1999).to_s + (job.id+100).to_s %></td>
      </tr>
      <% end %>

    </table>
  </div>
</div>

<script>
  $( function() {
    $('td').each(function() {
      test = $(this);
      if (test.html() == "active"){
        test.css("color","green");
      } else if (test.html() == "inactive"){
        test.css("color","red");
      }
    });
  });
</script>