
<%= form_for @seeker do |f| %>
  <% if @seeker.errors.any? %>
    <div>
      <%= pluralize(@seeker.errors.count, "error") %> prevented the account from being created:
      <ul>
        <% @seeker.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h2>Personal</h2>
  <div>
    <%= f.label :postalCode %><br>
    <%= f.text_field :postalCode %>
  </div>
  <h2>Education/Certifications</h2>
  <div>
    <%= f.label :educationLevel, "Education Level" %><br>
    <%= f.select :educationLevel, ['High School', 'Some University', 'University/College', 'Masters', 'PhD'] %>
  </div>
  <div>
    <%= f.label :certifications, "Certifications (Hold CTRL to select multiple)" %><br>
    <%= f.select :certifications, ['VSA', 'CFA (level 1)', 'CFA (level 2)', 'CFA (level 3)', 'CSC', 'CIP', 'LLQP', 'CAIB', 'Insurance Broker (level 1)', 'Insurance Broker (level 2)', 'Insurance Broker (level 3)'], {prompt: "Select Certifications"},{:multiple => true, class: "input-lg"}%>
  </div>
  <h2>Resume</h2>
  <div>
    Upload resume feature (WIP) <br><br>
  </div>
  <h2>Experience</h2>
  <div>
    <%= f.label :inSales %><br>
    <div id="inSales_slider" class="slider">
      <div id="inSales_handle" class="ui-slider-handle"></div>
    </div>
    <%= f.hidden_field :inSales %>
  </div>

  <div>
    <%= f.label :outSales %><br>
    <div id="outSales_slider" class="slider">
      <div id="outSales_handle" class="ui-slider-handle"></div>
    </div>
    <%= f.hidden_field :outSales %>
  </div>
  ***These should be greyed-out on default
  <div style="float: left">
    <%= f.label :inboundSales %><br>
    <%= f.check_box :inboundSales %>
  </div>
  <div style="float: left">
    <%= f.label :outboundSales %><br>
    <%= f.check_box :outboundSales %>
  </div>
  <h2>Sales Skills</h2>
  <div style="clear: both">
    <%= f.label :coldCall, "Cold Calling" %><br>
    <%= f.check_box :coldCall %>
  </div>
  <div>
    <%= f.label :doorToDoor, "Door to Door" %><br>
    <%= f.check_box :doorToDoor %>
  </div>
  <div>
    <%= f.label :custService, "Customer Service" %><br>
    <%= f.check_box :custService %>
  </div>
  <div>
    <%= f.label :acctManagment, "Account Management" %><br>
    <%= f.check_box :acctManagment %>
  </div>
  <div>
    <%= f.label :negotiation %><br>
    <%= f.check_box :negotiation %>
  </div>
  <div>
    <%= f.label :presenting %><br>
    <%= f.check_box :presenting %>
  </div>
  <div>
    <%= f.label :leadership %><br>
    <%= f.check_box :leadership %>
  </div>
  <div>
    <%= f.label :closing %><br>
    <%= f.check_box :closing %>
  </div>
  <div>
    <%= f.label :hunterBased, "Hunter-based" %><br>
    <%= f.check_box :hunterBased %>
  </div>
  <div>
    <%= f.label :farmerBased, "Farmer Based" %><br>
    <%= f.check_box :farmerBased %>
  </div>
  <div>
    <%= f.label :commBased %><br>
    <%= f.check_box :commBased %>
  </div>
  <hr>
   <div>
    <%= f.label :B2C, "B2C" %><br>
    <%= f.check_box :B2C %>
  </div>
  <div>
    <%= f.label :B2B, 'B2B' %><br>
    <%= f.check_box :B2B %>
  </div>
  <h2> Sales Methodology</h2>
   <div>
    <%= f.label :consSales, "Consultive Sales" %><br>
    <%= f.check_box :consSales %>
  </div>
  <div>
    <%= f.label :directSales, "Direct Sales/Product Focused" %><br>
    <%= f.check_box :directSales %>
  </div>
  <div>
    <%= f.label :solutionSales, "Solution Sales" %><br>
    <%= f.check_box :solutionSales %>
  </div>
 
  <h2>Proficient Languages</h2>
  <div>
    <%= f.label :languages, "Hold CTRL to select multiple" %><br>
    <%= f.select :languages, [ ["English", "English"], ["French", "French"], ["Korean", "Korean"], ["Mandarin", "Mandarin"], ["Punjabi", "Punjabi"], ["Spanish", "Spanish"], ["Arabic", "Arabic"], ["Cantonese", "Cantonese"]], {prompt: "Select Languages"},{:multiple => true, class: "input-lg"} %>
  </div>

   <br>
  <div><%= f.submit "Submit" %></div>
<% end %>


 <script>
  $( function() {
      var handle = $( "#inSales_handle" );
      $( "#inSales_slider" ).slider({
        create: function() {
          handle.text( $( this ).slider( "value" ) );
        },
            min: 1,
            max: 10,
            value: 3,
            step: 1,
        slide: function( event, ui ) {
          handle.text( ui.value );
          $("#seeker_inSales").val(ui.value);
          console.log(ui.value);
        }
      });

      var handle2 = $( "#outSales_handle" );
      $( "#outSales_slider" ).slider({
        create: function() {
          handle2.text( $( this ).slider( "value" ) );
        },
            min: 1,
            max: 10,
            value: 3,
            step: 1,
        slide: function( event, ui ) {
          handle2.text( ui.value );
          $("#seeker_outSales").val(ui.value);
          console.log(ui.value);
        }
      });









    } );
 </script>