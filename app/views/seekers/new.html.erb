  </div>
  <div>
    <%= f.label :commBased %><br>
    <%= f.check_box :commBased %>
  </div>
  <div>
    <%= f.label :B2C %><br>
    <%= f.check_box :B2C %>
  </div>
  <div>
    <%= f.label :B2B %><br>
    <%= f.check_box :B2B %>
  </div>
  <div>
    <%= f.label :consSales %><br>
    <%= f.check_box :consSales %>
  </div>
  <div>
    <%= f.label :directSales %><br>
