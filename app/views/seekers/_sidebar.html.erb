<nav id="sidebar" class="jobs_sidebar">
    <!-- Sidebar Header -->
    <div class="sidebar-header">
        <h3>FILTER</h3>
        <div type="button" id="sidebarCollapse" class="btn btn-info">
          <i class="glyphicon glyphicon-align-left"></i>
        </div>
        <hr>
    </div>
    <%= form_tag seeker_path(@seeker), :method => 'get', :id => "seeker_filter" do %>
              <p>

                
              </p>


               <div class="sidebar-main" id="navcol-2">
                    <h3>Minimum Years of Experience:</h3>
                    <%= select_tag :filter_years, options_for_select((1..@seeker.inSales).map { |i| i.to_s}, selected: params[:filter_years]), { class: "form form-group form-control" }%>

                  <div style="color:white;">
                    
                  </div>

            		</br>
                    <h3>Sales Skills:</h3>

                    <% selectSkills = {
                    driversLicence: "Has drivers license",
                    hasVehicle:"Has vehicle",                   
                    coldCall: "Cold calling",                  
                    doorToDoor: "Door to door",
                    custService: "Customer Service",                 
                    acctManagment: "Account Management",                 
                    negotiation: "Negotiation",   
                    leadership: "Leadership",    
                    closing: "Closing", 
                    } 

                    filter_skills_options = selectSkills.select{ |k ,v| @seekSkills.has_key? k}.map {|k, v| [v, k]} 
                    %>

                      <%= select_tag :filter_skills, options_for_select(filter_skills_options, selected: params[:filter_skills]),{:multiple => true, class: "form-control multi-select"} %>
             
                    <h3>Minimum Pay:</h3>
                    
                       <%= select_tag :filter_salary, options_for_select((10000..100000).step(5000).map { |i| [number_to_currency(i), i]}, selected: params[:filter_salary]), { class: "form form-group form-control" } %>
            		<br><br>
                    <%= submit_tag "Filter Results", :name => nil, class: "btn btn-default", id: "filter_button"%>
                </div>
    <% end %>
</nav>


